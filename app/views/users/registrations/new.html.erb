<div class ="sign_up_page">
  <h2 class ="sign_up_title">麺バー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="sign_up_field">
    <%= f.label :ユーザーネーム %>
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="sign_up_field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="sign_up_field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="sign_up_field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="sign_up_actions">
    <%= f.submit "新しいアカウントを作成", class: "sign_up_button" %>
  </div>
<% end %>
  <div class="sign_up_actions">
    <%= link_to "すでにアカウントをお持ちの方はログイン", '/users/sign_in', class: "sign_in_link" %>
  </div>
</div>
